<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".useroptions">
    
   <ScrollView
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       >

       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:orientation="vertical"
           >

           <RelativeLayout
               android:layout_width="fill_parent"
               android:layout_height="fill_parent">
               
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="230dp"
                   android:orientation="vertical"
                   android:gravity="center"
                   android:background="@drawable/dashbg"
                   >
                   <ImageView
                       android:layout_width="90dp"
                       android:layout_height="90dp"
                       android:src="@drawable/customer"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="DASHBOARD"
                       android:layout_gravity="center"
                       android:textStyle="bold"
                       android:textSize="16sp"
                       android:layout_marginTop="10dp"
                       />

               </LinearLayout>
               
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginTop="215dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   >
                   
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="135dp"
                       android:orientation="horizontal"
                       android:layout_marginBottom="10dp"
                       >
                       
                       <android.support.v7.widget.CardView
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:orientation="vertical"
                           >
                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               >
                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/offers"
                                        android:id="@+id/offers"
                                        android:layout_centerHorizontal="true"
                                        />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="OFFERS"
                                   android:textStyle="bold"
                                   android:textSize="16sp"
                                   android:layout_below="@+id/offers"
                                   android:layout_marginTop="10dp"
                                   android:layout_marginBottom="10dp"
                                   android:layout_centerHorizontal="true"
                                   />

                               <Button
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                    android:id="@+id/buttonOffers"
                                   android:background="@android:color/transparent"
                                   android:onClick="offerview"
                                   />
                               
                           </RelativeLayout>
                       </android.support.v7.widget.CardView>

                       <android.support.v7.widget.CardView
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:orientation="vertical"
                           android:layout_marginRight="5dp"
                           >
                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               >
                               <ImageView
                                   android:layout_width="50dp"
                                   android:layout_height="50dp"
                                   android:src="@drawable/resticon"
                                   android:id="@+id/restaurant"
                                   android:layout_centerHorizontal="true"
                                   />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="RESTAURANTS"
                                   android:textStyle="bold"
                                   android:textSize="16sp"
                                   android:layout_below="@+id/restaurant"
                                   android:layout_marginTop="10dp"
                                   android:layout_marginBottom="10dp"
                                   android:layout_centerHorizontal="true"
                                   />

                               <Button
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:id="@+id/buttonRestaurant"
                                   android:background="@android:color/transparent"
                                   android:onClick="openrestaurants"

                                   />

                           </RelativeLayout>
                       </android.support.v7.widget.CardView>
                   </LinearLayout>


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="135dp"
                       android:orientation="horizontal"
                       android:layout_marginBottom="10dp"
                       >

                       <android.support.v7.widget.CardView
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:orientation="vertical"
                           >
                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               >
                               <ImageView
                                   android:layout_width="50dp"
                                   android:layout_height="50dp"
                                   android:src="@drawable/booktable"
                                   android:id="@+id/book"
                                   android:layout_centerHorizontal="true"
                                   />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="BOOK TABLE/HALL"
                                   android:textStyle="bold"
                                   android:textSize="16sp"
                                   android:layout_below="@+id/book"
                                   android:layout_marginTop="10dp"
                                   android:layout_marginBottom="10dp"
                                   android:layout_centerHorizontal="true"
                                   />

                               <Button
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:id="@+id/buttonBook"
                                   android:background="@android:color/transparent"
                                   android:onClick="booktablehall"
                                   />

                           </RelativeLayout>
                       </android.support.v7.widget.CardView>

                       <android.support.v7.widget.CardView
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:orientation="vertical"
                           android:layout_marginRight="5dp"
                           >
                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               >
                               <ImageView
                                   android:layout_width="50dp"
                                   android:layout_height="50dp"
                                   android:src="@drawable/deliver"
                                   android:id="@+id/order"
                                   android:layout_centerHorizontal="true"
                                   />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="ORDER"
                                   android:textStyle="bold"
                                   android:textSize="16sp"
                                   android:layout_below="@+id/order"
                                   android:layout_marginTop="10dp"
                                   android:layout_marginBottom="10dp"
                                   android:layout_centerHorizontal="true"
                                   />

                               <Button
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:id="@+id/buttonOrder"
                                   android:background="@android:color/transparent"
                                   android:onClick="takeOrder"
                                   />

                           </RelativeLayout>
                       </android.support.v7.widget.CardView>
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="135dp"
                       android:orientation="horizontal"
                       android:layout_marginBottom="10dp"
                       >

                       <android.support.v7.widget.CardView
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:orientation="vertical"
                           >
                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               >
                               <ImageView
                                   android:layout_width="50dp"
                                   android:layout_height="50dp"
                                   android:src="@drawable/feedback"
                                   android:id="@+id/feedback"
                                   android:layout_centerHorizontal="true"
                                   />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="FEEDBACK"
                                   android:textStyle="bold"
                                   android:textSize="16sp"
                                   android:layout_below="@+id/feedback"
                                   android:layout_marginTop="10dp"
                                   android:layout_marginBottom="10dp"
                                   android:layout_centerHorizontal="true"
                                   />

                               <Button
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:id="@+id/buttonFeedback"
                                   android:background="@android:color/transparent"
                                   android:onClick="takefeedback"
                                   />

                           </RelativeLayout>
                       </android.support.v7.widget.CardView>

                       <android.support.v7.widget.CardView
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:orientation="vertical"
                           android:layout_marginRight="5dp"
                           >
                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               >
                               <ImageView
                                   android:layout_width="50dp"
                                   android:layout_height="50dp"
                                   android:src="@drawable/contactus"
                                   android:id="@+id/contactus"
                                   android:layout_centerHorizontal="true"
                                   />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="CONTACT US"
                                   android:textStyle="bold"
                                   android:textSize="16sp"
                                   android:layout_below="@+id/contactus"
                                   android:layout_marginTop="10dp"
                                   android:layout_marginBottom="10dp"
                                   android:layout_centerHorizontal="true"
                                   />

                               <Button
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:id="@+id/buttonContactUs"
                                   android:onClick="dialogopen"
                                   android:background="@android:color/transparent"
                                   />

                           </RelativeLayout>
                       </android.support.v7.widget.CardView>
                   </LinearLayout>

               </LinearLayout>



           </RelativeLayout>
       </LinearLayout>

   </ScrollView>
</RelativeLayout>